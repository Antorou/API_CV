{
  "version": 2,
  "builds": [
    {
      "src": "./server.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api-docs",
      "dest": "/server.js"
    },
    {
      "src": "/swagger.json",
      "dest": "/swagger.json"
    },
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "rewrites": [
    {
      "source": "/api-docs/(.*)",
      "destination": "/server.js"
    }
  ]
}